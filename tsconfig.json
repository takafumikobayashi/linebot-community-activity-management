{
  "compilerOptions": {
    "target": "ES2019",
    "module": "ESNext",
    "lib": ["es2019"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "src",
    "outDir": "dist",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "removeComments": true
  },
  "include": ["src/**/*.ts", "e2e/**/*.ts"],
  "exclude": ["node_modules", "tests"],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node",
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
